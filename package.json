{
  "name": "express-typeorm-starter",
  "version": "1.0.0",
  "description": "REST API with flexible PGlite/PostgreSQL database setup",
  "main": "dist/server.js",
  "scripts": {
    "dev": "tsx src/server.ts",
    "dev:fresh": "rm -rf ./data && npm run dev",
    "dev:postgres": "DATABASE_TYPE=postgres npm run dev",
    "dev:postgres:fresh": "DATABASE_TYPE=postgres FORCE_FIXTURES=true npm run dev",
    "build": "tsc",
    "start": "node dist/server.js",
    "test": "NODE_ENV=test vitest",
    "test:watch": "NODE_ENV=test vitest --watch",
    "migration:generate": "typeorm-ts-node-commonjs migration:generate",
    "migration:run": "typeorm-ts-node-commonjs migration:run",
    "migration:revert": "typeorm-ts-node-commonjs migration:revert",
    "lint": "eslint src/",
    "lint:fix": "eslint src/ --fix",
    "format": "prettier --write src/",
    "format:check": "prettier --check src/"
  },
  "dependencies": {
    "@electric-sql/pglite": "^0.2.0",
    "express": "^4.18.2",
    "reflect-metadata": "^0.1.13",
    "typeorm": "^0.3.17",
    "typeorm-pglite": "^0.3.2"
  },
  "devDependencies": {
    "@eslint/js": "^9.34.0",
    "@types/eslint__js": "^8.42.3",
    "@types/express": "^4.17.17",
    "@types/node": "^20.5.0",
    "eslint": "^9.34.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "prettier": "^3.6.2",
    "tsx": "^3.12.7",
    "typescript": "^5.1.6",
    "typescript-eslint": "^8.40.0",
    "vitest": "^0.34.1"
  },
  "keywords": [
    "nodejs",
    "typescript",
    "express",
    "typeorm",
    "pglite",
    "postgresql"
  ],
  "author": "",
  "license": "MIT"
}
