{
  "name": "express-typeorm-starter",
  "version": "1.0.0",
  "description": "REST API with flexible PGlite/PostgreSQL database setup",
  "main": "dist/server.js",
  "scripts": {
    "dev": "tsx src/server.ts",
    "dev:fresh": "rm -rf ./data && npm run dev",
    "dev:postgres": "DATABASE_TYPE=postgres npm run dev",
    "dev:postgres:fresh": "DATABASE_TYPE=postgres FORCE_FIXTURES=true npm run dev",
    "build": "tsc",
    "build:prod": "NODE_ENV=production tsc",
    "start": "node dist/server.js",
    "start:prod": "NODE_ENV=production node dist/server.js",
    "test": "NODE_ENV=test vitest run --reporter=dot --silent",
    "test:watch": "NODE_ENV=test vitest",
    "test:coverage": "NODE_ENV=test vitest run --coverage",
    "typecheck": "tsc --noEmit",
    "migration:generate": "typeorm-ts-node-commonjs migration:generate",
    "migration:run": "typeorm-ts-node-commonjs migration:run",
    "migration:revert": "typeorm-ts-node-commonjs migration:revert",
    "db:reset": "rm -rf ./data && npm run dev:fresh",
    "db:seed": "tsx -e \"import('./src/database/fixtures.ts').then(m => m.loadFixtures())\"",
    "lint": "eslint src/",
    "lint:fix": "eslint src/ --fix",
    "format": "prettier --write src/",
    "format:check": "prettier --check src/",
    "clean": "rm -rf dist node_modules/.cache .nyc_output coverage",
    "reset": "rm -rf node_modules package-lock.json && npm install",
    "ci": "npm run typecheck && npm run lint && npm run format:check && npm run test"
  },
  "type": "module",
  "dependencies": {
    "@electric-sql/pglite": "^0.3.7",
    "express": "^5.1.0",
    "reflect-metadata": "^0.2.2",
    "typeorm": "^0.3.26",
    "typeorm-pglite": "^0.3.2"
  },
  "devDependencies": {
    "@eslint/js": "^9.34.0",
    "@types/express": "^5.0.3",
    "@types/node": "^24.3.0",
    "eslint": "^9.34.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-n": "^17.21.3",
    "eslint-plugin-prettier": "^5.5.4",
    "prettier": "^3.6.2",
    "tsx": "^4.20.5",
    "typescript": "^5.9.2",
    "typescript-eslint": "^8.40.0",
    "vitest": "^3.2.4"
  },
  "author": "Costa Walcott",
  "license": "MIT",
  "engines": {
    "node": "^22.18.0 || ^24.0.0",
    "npm": ">= 10"
  }
}
